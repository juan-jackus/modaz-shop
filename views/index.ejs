<!-- BEST SELLING PRODUCT  -->
<section class="flat-row row-product-project style-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="title-section margin-bottom-41">
          <h2 class="title">Meilleures Ventes</h2>
        </div>
        <ul class="flat-filter style-1 text-center max-width-699 clearfix">
          <li id="filter-best-sell" class="active">
            <a href="#" data-filter=".all-product">Tous les produits</a>
          </li>
          <li><a href="#" data-filter=".clothing">Vêtements</a></li>
          <li><a href="#" data-filter=".shoes">Chaussures</a></li>
          <li><a href="#" data-filter=".sportswear">Habits de Sport</a></li>
          <li><a href="#" data-filter=".accessories">Accessoires</a></li>
        </ul>
        <div class="divider h54"></div>
        <div class="product-content product-fourcolumn clearfix">
          <ul class="product style2 isotope-product clearfix">
            <%bestSellingProducts.map((product,i)=> {%>
            <!-- prettier-ignore -->
            <li
              class="product-item 
                <%= (() => { if (i<8) return 'all-product'; 
                if (7<i&&i<12) return 'clothing'; 
                if (11<i&&i<16) return 'shoes'; 
                if (15<i&&i<20) return 'sportswear'; 
                if (19<i&&i<24) return 'accessories'; })(); %>"
            >
              <div class="product-thumb clearfix">
                <a href="/shop/product-details/<%= product._id %>">
                  <img
                    src="<%= product.image %>"
                    style="object-fit: contain; width: 180px; height: 180px"
                    alt="image"
                  />
                </a>
              </div>
              <div class="product-info clearfix mt-4">
                <span class="product-title"> <%= product.name %> </span>
                <div class="price">
                  <ins>
                    <span class="amount">$<%= product.price %></span>
                  </ins>
                </div>
              </div>
              <div 
                class="add-to-cart text-center" 
                data-product="<%= JSON.stringify(product) %>"
              >
                <a href="#">AJOUTER AU PANIER</a>
              </div>
              <!-- Product Rating -->
              <!-- prettier-ignore -->
              <span class="rating">
                <% for (let i = 0; i < 5; i++) { %>
                  <%if (product.rating > i) {%>
                    <i class="fa fa-star" style="color: #ffa41c;"></i>
                  <% }else{%>
                    <i class="fa fa-star-o" style="color: #ffa41c;"></i>
                  <% }} %>
              </span>
            </li>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- END BEST SELLING PRODUCT  -->

