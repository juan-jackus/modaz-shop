<!-- NEW PRODUCT -->
<section class="flat-row row-product-new">
  <div class="container">
    <div class="row">
      <%if(newProducts.length) {%>
      <div class="col-md-12">
        <div class="title-section margin-bottom-52">
          <h2 class="title">Nouveaux Produits</h2>
        </div>
        <div class="product-content product-fourcolumn clearfix">
          <ul class="product style2 clearfix row">
            <%newProducts.map((product)=> {%>
            <li class="product-item">
              <div class="product-thumb clearfix">
                <a href="/shop/product-details/<%= product._id %>">
                  <img
                    src="<%= product.image %>"
                    style="object-fit: contain; width: 250px; height: 250px"
                    alt="image"
                  />
                </a>
                <span class="new">Nouveau</span>
                <!-- Color -->
                <% if (product.colors) {%>
                <div class="product-colors2">
                  <%product.colors.split(',').map((color)=> {%>
                  <span
                    class="color2"
                    style="background-color: <%= color %>"
                  ></span>
                  <% })%>
                </div>
                <% }%>
              </div>
              <!-- Product Name & Price -->
              <div class="product-info text-center clearfix mt-4">
                <span class="product-title"><%= product.name %></span>
                <div class="price">
                  <ins>
                    <span class="amount">$<%= product.price %></span>
                  </ins>
                </div>
              </div>
              <!-- Add To Cart Button -->
              <div
                class="add-to-cart text-center"
                data-product="<%= JSON.stringify(product) %>"
              >
                <a href="#">AJOUTER AU PANIER</a>
              </div>
            </li>
            <% }) %>
          </ul>
        </div>
      </div>
      <% }%>
    </div>
  </div>
</section>
<!-- END NEW PRODUCT -->

